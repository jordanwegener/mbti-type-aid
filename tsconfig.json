{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "jsx": "react",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@src/*": ["src/*"],
      "@styleguide/*": ["src/styleguide/*"],
      "@components/*": ["src/components/*"],
      "@domain/*": ["src/domain/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
